<form action="/users/new" method="post">
  <fieldset>
    <label for="first_name">First Name</label>
    <input type="text" name="first_name" id="first_name" placeholder="Enter your first name." minlength="1">

    <label for="last_name">Last Name</label>
    <input type="text" name="last_name" id="last_name" placeholder="Enter your last name." minlength="1">

    <label for="email">Email Address</label>
    <input type="email" name="email" id="email" placeholder="username@domain.com" minlength="4">

    <input type="submit" value="Add User">
    <input type="reset" value="Clear Form">
  </fieldset>
</form>